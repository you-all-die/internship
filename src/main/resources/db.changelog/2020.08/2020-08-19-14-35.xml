<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    <changeSet id="2020-08-19-14-35" author="Roman Karavashkin">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="category"/>
            </not>
        </preConditions>
        <comment>Create table category</comment>

        <createTable tableName="category">

            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints nullable="false" primaryKey="true" unique="true"/>
            </column>

            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

            <column name="parent_id" type="BIGINT">
                <constraints nullable="true"/>
            </column>


        </createTable>
        <addForeignKeyConstraint baseTableName="product" baseColumnNames="category_id"
                                 constraintName="product_category_id_fk"
                                 referencedTableName="category"
                                 referencedColumnNames="id"/>
    </changeSet>
</databaseChangeLog>