<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    <changeSet id="2020-08-19-13-09" author="Roman Karavashkin">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="address"/>
            </not>
        </preConditions>
        <comment> Create table address</comment>
        <createTable tableName="address">

            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints nullable="false" primaryKey="true" unique="true"/>
            </column>

            <column name="city" type="VARCHAR(255)" >
                <constraints nullable="true"/>
            </column>

            <column name="street" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>

            <column name="house" type="INTEGER" >
                <constraints nullable="true"/>
            </column>

            <column name="apartment" type="INTEGER">
                <constraints nullable="true"/>
            </column>
            <column name="post_code" type="BIGINT">
                <constraints nullable="true"/>
            </column>


        </createTable>
        <addForeignKeyConstraint baseTableName="user" baseColumnNames="address_id"
                                 constraintName="user_address_id_fk"
                                 referencedTableName="address"
                                 referencedColumnNames="id"/>
    </changeSet>
</databaseChangeLog>