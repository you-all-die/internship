<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    <changeSet id="2020-08-19-14-16" author="Roman Karavashkin">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="order_product"/>
            </not>
        </preConditions>
        <comment>Create table order_product</comment>

        <createTable tableName="order_product">

            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints nullable="false" unique="true"/>
            </column>

            <column name="order_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>

            <column name="product_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>


            <column name="amount" type="INTEGER">
                <constraints nullable="true"/>
            </column>

            <column name="price" type="BIGINT">
                <constraints nullable="true"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseTableName="order_product" baseColumnNames="order_id"
                                 constraintName="order_product_order_id_fk"
                                 referencedTableName="order"
                                 referencedColumnNames="id"/>
    </changeSet>
</databaseChangeLog>