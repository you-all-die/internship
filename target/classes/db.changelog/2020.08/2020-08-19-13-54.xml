<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
        <changeSet id="2020-08-19-12-20" author="Roman Karavashkin">
            <preConditions onFail="MARK_RAN">
                <not>
                    <tableExists tableName="order"/>
                </not>
            </preConditions>
            <comment> Create table order</comment>
            <createTable tableName="order">

                <column name="id" type="BIGINT" autoIncrement="true">
                    <constraints nullable="false" primaryKey="true" unique="true"/>
                </column>

                <column name="user_id" type="BIGINT">
                    <constraints nullable="false"/>
                </column>

                <column name="address_id" type="BIGINT">
                    <constraints nullable="false"/>
                </column>

                <column name="amount" type="INTEGER">
                    <constraints nullable="true"/>
                </column>


                <column name="version" type="INTEGER" defaultValue="0">
                    <constraints nullable="false"/>
                </column>
                <column name="created" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                    <constraints nullable="false"/>
                </column>
                <column name="update" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                    <constraints nullable="false"/>
                </column>
            </createTable>

            <addForeignKeyConstraint baseTableName="order" baseColumnNames="user_id"
                                     constraintName="user_id_fk"
                                     referencedTableName="user"
                                     referencedColumnNames="id"/>

            <addForeignKeyConstraint baseTableName="order" baseColumnNames="address_id"
                                     constraintName="address_id_fk"
                                     referencedTableName="address"
                                     referencedColumnNames="id"/>


        </changeSet>
</databaseChangeLog>